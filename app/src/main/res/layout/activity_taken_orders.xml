<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5f7"
    tools:context=".takenorders.TakenOrders">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_height="110dp"
        android:layout_width="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:background="@color/main_green"
                android:text="Заказы"
                android:gravity="center_vertical"
                android:paddingStart="30dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_height="60dp"/>
            <LinearLayout
                android:id="@+id/layout_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_free_orders"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button2"
                    android:layout_weight="1"
                    android:text="СВОБОДНЫЕ"/>
                <Button
                    android:id="@+id/btn_taken_orders"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button2"
                    android:layout_weight="1"
                    android:text="@string/btn_taken_orders"/>
            </LinearLayout>

        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orders_recyclerview"
        android:layout_below="@+id/swipe"
        android:layout_above="@+id/layout_menu_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:id="@+id/username"
        android:layout_alignBottom="@+id/orders_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/layout_menu_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_orders"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button2"
            android:textSize="9dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_list"
            android:text="Заказы"/>
        <Button
            android:id="@+id/btn_push"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button2"
            android:textSize="9dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_notification"
            android:text="Уведомления"/>
        <Button
            android:id="@+id/btn_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button2"
            android:textSize="9dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_account"
            android:text="Профиль"/>
        <Button
            android:id="@+id/btn_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button2"
            android:textSize="9dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_menu"
            android:text="Меню"/>
    </LinearLayout>

</RelativeLayout>